{
  "name": "backend-apollo-prisma",
  "version": "0.0.1",
  "description": "",
  "main": "./src/index.ts",
  "scripts": {
    "build": "npm-run-all clean generate:gql generate:prisma transpile",
    "clean": "rimraf build",
    "copyfiles": "copyfiles ./src/api/**/*.graphql build",
    "dev": "start",
    "lint": "eslint --ignore-path .gitignore .",
    "generate:gql": "graphql-codegen --config codegen.yml",
    "generate:prisma": "prisma generate",
    "migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
    "start": "ts-node ./src/index.ts",
    "test:coverage": "jest --coverage",
    "transpile": "tsc -p ./",
    "watch:dev": "NODE_ENV=development npm run build && nodemon",
    "watch:test": "jest --watch"
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "apollo",
    "prisma"
  ],
  "author": "shoshincl",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/node": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.197",
    "@typescript-eslint/parser": "^6.3.0",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "prisma": "^5.1.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@apollo/subgraph": "^2.4.12",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "graphql-tag": "^2.12.6",
    "graphql-tools": "^9.0.0",
    "lodash": "^4.17.21"
  }
}
